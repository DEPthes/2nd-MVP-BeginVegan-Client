<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.ui.view.profile.MainProfileFragment">
    <ImageView
        android:id="@+id/iv_background_top"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/gradient_profile_bg"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageButton
                android:id="@+id/btn_profile_more"
                android:layout_width="@dimen/btn_32"
                android:layout_height="@dimen/btn_32"
                android:src="@drawable/ic_profile_more"
                android:background="@color/color_transparent"
                android:scaleType="centerCrop"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_gravity="end"/>
        </androidx.appcompat.widget.Toolbar>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_profile_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tb_profile_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tl_records"
            android:layout_margin="@dimen/margin_32"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_profile_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/img_default_profile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <LinearLayout
                android:id="@+id/ll_profile_usernames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/civ_profile_image"
                app:layout_constraintTop_toTopOf="@id/civ_profile_image"
                android:layout_marginStart="@dimen/side_margin"
                >
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textSize="@dimen/text_20"
                    android:textColor="@color/color_text_32"
                    android:fontFamily="@font/notosanskr_bold"
                    android:includeFontPadding="false"/>
                <ImageButton
                    android:id="@+id/ib_edit_username"
                    android:layout_width="@dimen/item_28"
                    android:layout_height="@dimen/item_28"
                    android:src="@drawable/ic_profile_edit"
                    android:scaleType="fitCenter"
                    android:background="@color/color_transparent"
                    android:padding="@dimen/margin_6"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_vegan_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/civ_profile_image"
                app:layout_constraintTop_toBottomOf="@id/ll_profile_usernames"
                android:layout_marginStart="@dimen/side_margin">
                <TextView
                    android:id="@+id/tv_user_vegan_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vegan_type_lacto_ovo_kr"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/color_text_32"
                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"/>
                <ImageButton
                    android:id="@+id/ib_edit_vegan_type"
                    android:layout_width="@dimen/btn_24"
                    android:layout_height="@dimen/btn_24"
                    android:src="@drawable/ic_general_arrow_large"
                    android:scaleType="fitCenter"
                    android:background="@color/color_transparent"
                    android:rotation="90"
                    android:padding="@dimen/margin_4"/>
            </LinearLayout>
            <Button
                android:id="@+id/b_go_vegan_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_go_vegan_test"
                android:textColor="@color/color_primary3"
                android:textSize="@dimen/text_14"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:backgroundTint="@color/color_transparent"
                android:background="@color/color_transparent"
                app:layout_constraintStart_toEndOf="@id/civ_profile_image"
                app:layout_constraintTop_toBottomOf="@id/ll_vegan_type"
                android:layout_marginStart="@dimen/side_margin"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_records"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_56"
            app:layout_constraintTop_toBottomOf="@id/cl_profile_info"
            app:tabTextColor="@color/color_primary3"
            app:tabTextAppearance="@style/tabProfileTextSize"
            app:tabIndicatorColor="@color/color_primary3"
            app:tabIndicatorHeight="@dimen/line_1"
            app:tabRippleColor="@null">
        </com.google.android.material.tabs.TabLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_my_records"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tl_records"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>