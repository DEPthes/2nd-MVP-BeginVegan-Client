<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/radius_28"
        android:layout_marginHorizontal="@dimen/margin_40">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_40"
            android:layout_marginStart="@dimen/margin_28"
            android:layout_marginBottom="@dimen/margin_28">
            <RadioGroup
                android:id="@+id/rg_edit_vegan_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <RadioButton
                    android:id="@+id/rb_vegan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/vegan_type_vegan_kr"
                    android:textSize="@dimen/text_16"
                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@drawable/selector_rbtn_text_color"
                    android:layout_marginVertical="@dimen/margin_10"/>
                <RadioButton
                    android:id="@+id/rb_lacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/vegan_type_lacto_kr"
                    android:textSize="@dimen/text_16"
                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@drawable/selector_rbtn_text_color"
                    android:layout_marginVertical="@dimen/margin_10"/>
                <RadioButton
                    android:id="@+id/rb_lacto_ovo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/vegan_type_lacto_ovo_kr"
                    android:textSize="@dimen/text_16"
                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@drawable/selector_rbtn_text_color"
                    android:layout_marginVertical="@dimen/margin_10"/>
                <RadioButton
                    android:id="@+id/rb_pescatarian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/vegan_type_pescatarian_kr"
                    android:textSize="@dimen/text_16"
                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@drawable/selector_rbtn_text_color"
                    android:layout_marginVertical="@dimen/margin_10"/>
                <RadioButton
                    android:id="@+id/rb_pollotarian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/vegan_type_pollotarian_kr"
                    android:textSize="@dimen/text_16"
                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@drawable/selector_rbtn_text_color"
                    android:layout_marginVertical="@dimen/margin_10"/>
                <RadioButton
                    android:id="@+id/rb_flexitarian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/vegan_type_flexitarian_kr"
                    android:textSize="@dimen/text_16"
                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@drawable/selector_rbtn_text_color"
                    android:layout_marginVertical="@dimen/margin_10"/>
                <RadioButton
                    android:id="@+id/rb_beginner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/vegan_type_beginner_kr"
                    android:textSize="@dimen/text_16"
                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@drawable/selector_rbtn_text_color"
                    android:layout_marginVertical="@dimen/margin_10"/>
            </RadioGroup>
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_cancel"
                android:textColor="@color/color_text_32"
                android:textSize="@dimen/text_16"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:background="@color/color_transparent"
                app:layout_constraintTop_toBottomOf="@id/rg_edit_vegan_type"
                app:layout_constraintEnd_toStartOf="@id/btn_confirm"
                android:layout_marginTop="@dimen/margin_40" />
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_confirm"
                android:textColor="@color/color_text_32"
                android:textSize="@dimen/text_16"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:background="@color/color_transparent"
                app:layout_constraintTop_toBottomOf="@id/rg_edit_vegan_type"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_40"
                android:layout_marginEnd="@dimen/margin_16"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>