<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.ui.view.test.VeganTestAfterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_test_description_before"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_primary1"
            app:cardCornerRadius="@dimen/radius_16"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin_100"
            android:layout_marginHorizontal="@dimen/side_margin"
            app:cardElevation="@null">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/margin_40">
                <TextView
                    android:id="@+id/tv_vegan_type_kr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vegan_type_lacto_ovo_kr"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_16"
                    android:fontFamily="@font/notosanskr_medium"
                    android:background="@drawable/btn_filled_primary3"
                    android:paddingHorizontal="@dimen/margin_24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/tv_vegan_type_eng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vegan_type_lacto_ovo_eng"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/color_text_89"
                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/tv_vegan_type_kr"
                    android:layout_marginTop="@dimen/margin_4" />
                <TextView
                    android:id="@+id/tv_vegan_type_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/test_result_lacto_ovo"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/color_text_32"
                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/tv_vegan_type_eng"
                    android:layout_marginTop="@dimen/margin_32"
                    android:layout_marginHorizontal="@dimen/margin_32"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btn_vegan_test_again"
            android:layout_width="@dimen/btn_148"
            android:layout_height="wrap_content"
            android:text="@string/btn_vegan_test_again"
            android:textColor="@color/color_primary3"
            android:textSize="@dimen/text_16"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:background="@drawable/btn_stroke_primary3"
            app:layout_constraintTop_toBottomOf="@id/cv_test_description_before"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_go_home"
            android:layout_marginTop="20dp" />
        <Button
            android:id="@+id/btn_go_home"
            android:layout_width="@dimen/btn_164"
            android:layout_height="wrap_content"
            android:text="@string/btn_go_home"
            android:textSize="@dimen/text_16"
            android:textColor="@color/color_white"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:background="@drawable/btn_filled_primary3"
            app:layout_constraintTop_toBottomOf="@id/cv_test_description_before"
            app:layout_constraintStart_toEndOf="@id/btn_vegan_test_again"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />
        <ImageButton
            android:id="@+id/ib_vegan_test_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_test_share"
            android:background="@color/color_transparent"
            app:layout_constraintTop_toBottomOf="@id/btn_go_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_76"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>